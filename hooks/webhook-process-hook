#!/usr/bin/env python

import sys
import ConfigParser
import getopt
import os.path
import requests
import json

# Config file path
config_path = os.path.expanduser( '/var/gerrit/review_site/hooks/.gerrit-webhook')

config = ConfigParser.RawConfigParser()
config.read(config_path)

url = config.get('webhook', 'url')

def show_usage():
    print '\nNormal webhook usage: ' + sys.argv[0] + ' --action [new|merged|abandoned|add] --change <change id> --commit <git hash> --change-url <url to change>'

def fire_webhook(action,commitUrl, branch, project, changeOwner, submitter, reviewer):
    payload = {
        'action': action,
        'url': commitUrl,
        'branch': branch,
        'project': project,
        'change-owner': changeOwner,
        'submitter': submitter,
        'reviewer': reviewer
    }
    headers = {'content-type': 'application/json'}
    requests.post(url, data=json.dumps(payload), headers=headers)

def main():
    if (len(sys.argv) < 2):
        show_usage()
        exit()

    need = ['topic=','action=', 'change=', 'change-url=', 'commit=', 'project=', 'branch=', 'uploader=',
            'patchset=', 'abandoner=', 'reason=', 'submitter=', 'is-draft=', 'change-owner=', 'author=', 'comment=', 'newrev=', 'kind=', 'Code-Review=', 'reviewer=']
    optlist, args = getopt.getopt(sys.argv[1:], '', need)
    id = action = commitUrl = who = commit = branch = project = topic = changeOwner = reviewer = submitter = ''

    for o, a in optlist:
        #print '\n' + o + ':' + a
        if o == '--change': id = a
        elif o == '--change-url': commitUrl = a
        elif o == '--commit': commit = a
        elif o == '--action': action = a
        elif o == '--uploader': who = a
        elif o == '--submitter': submitter = a
        elif o == '--abandoner': who = a
        elif o == '--branch': branch = a
        elif o == '--project': project = a
        elif o == '--topic': topic = a
        elif o == '--change-owner': changeOwner = a
        elif o == '--reviewer' : reviewer = a

    if (len(id) > 0):
	print '\nFire_webhook ' + 'action:' + action + '\n    commitUrl:' + commitUrl + '\n    change-owner:' \
		+ changeOwner + '\n    branch:' + branch + '\n    project:' + project + '\n    reviewer:' \
		+ reviewer + '\n    submitter:' + submitter
	if (action == 'add' or action == 'merged'):
                fire_webhook(action, commitUrl, branch, project, changeOwner, submitter, reviewer)
    else:
        show_usage()
        
if __name__ == '__main__':
    main()
